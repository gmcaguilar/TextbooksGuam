<div class="container">
  <div class="col-sm-10 col-sm-offset-1">
    <%= form_for(@post, :html => {:class => "form-group"}) do |f| %>
      <%= f.text_field :title, :placeholder => "Title", :class => "form-control" %>
      <%= f.text_field :authors, :placeholder => "Authors", :class => "form-control" %>
      <%= f.text_field :isbn10, :placeholder => "ISBN-10", :class => "form-control" %>
      <%= f.text_field :isbn13, :placeholder => "ISBN-13", :class => "form-control" %>
      <%= f.text_area :description, :placeholder => "Description", :class => "form-control" %>
      <%= f.text_field :price, :placeholder => "Price", :class => "form-control" %>
      <%= f.submit "Create", :class => "btn btn-submit" %>
    <% end %>
  </div>
</div>
